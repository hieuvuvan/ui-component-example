{
    "image": "mcr.microsoft.com/devcontainers/universal:2",
    "hostRequirements": {
      "cpus": 4
    },
    "waitFor": "onCreateCommand",
    "updateContentCommand": "npm install",
    "postCreateCommand": "",
    "postAttachCommand": {
      "server": "npm run dev"
    },
    "customizations": {
      "codespaces": {
        "openFiles": [
          "src/App.js"
        ]
      },
      "vscode": {
        "extensions": [
          "dbaeumer.vscode-eslint",
          "EditorConfig.editorconfig",
          "esbenp.prettier-vscode"
        ]
      }
    },
    "portsAttributes": {
      "5173": {
        "label": "Application",
        "onAutoForward": "openPreview"
      }
    },
    "forwardPorts": [5173]
  }